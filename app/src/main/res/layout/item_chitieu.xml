<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên chi phí" />
    <TextView
        android:id="@+id/tvSoluong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số lượng"
        android:paddingLeft="82dp"/>
    <TextView
        android:id="@+id/tvGiatien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giá tiền"
       android:paddingLeft="148dp"/>
    <TextView
        android:id="@+id/tvNgaychi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày chi"
        android:paddingLeft="208dp"/>
    <ImageView
        android:id="@+id/imgDel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_clear_black_24dp"
        android:paddingLeft="320dp"/>


</android.support.constraint.ConstraintLayout>